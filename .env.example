# App / Domain
SHINOGI_PUBLIC_URL=http://localhost:5000
SHINOGI_TRUSTED_HOSTS=localhost,127.0.0.1

# Database
CONNECTIONSTRINGS__DEFAULT=Host=localhost;Port=5432;Username=ctfd;Password=ctfd;Database=ctfd

# JWT（init時に自動生成されます）
JWT__KEY=REPLACE_ME_WITH_RANDOM_KEY
JWT__ISSUER=Shinogi
JWT__AUDIENCE=Shinogi

# Admin（本番環境では必ず変更してください）
SHINOGI_ADMIN_EMAIL=admin@example.com
SHINOGI_ADMIN_PASSWORD=ChangeMe123!
SHINOGI_ADMIN_DISPLAYNAME=Admin
SHINOGI_ADMIN_RESET_PASSWORD=false

# テスト用シードデータ（true で有効化）
SHINOGI_SEED_DATA=false

# SMTP（MailHog — 開発用フェイクSMTPサーバー）
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@shinogi.local
